<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" type="text/css" href="/css/generalstyles.css">
    <link rel="stylesheet" type="text/css" href="/css/notes.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
</head>
<body>
<%- include('../partials/navbarUser.ejs')%>

<div class="div-container">
    <div class="div-title">
        <h2 class="title">Bem Vindo <%= user.name%>!</h2>
        <hr class="line">
    </div>
    

    <a href="/articles/create"><button class="button button-edit" >Adicionar artigo <img class="icons" src="/img/icons/seta-direita.png" alt=""></button></a>
    <div class="div-cards">
        <% result.articles.rows.forEach(articles => {%>
                <div class="div-card">
                    <div class="div-title">
                        <h4><%= articles.title%></h4>
                        <hr class="line">
                    </div>
                    <div class="card-content">
                        <div class="d-flex justify-content-center"><%- articles.description%></div>

                        <div class="div-buttons">
                            <div class="me-2">
                                <a href="/articles/update/<%= articles.id%>"><button class="button button-edit" ><img class="icons" src="/img/icons/editar.png" alt=""></button></a>
                            </div>
                            <div>
                                <form action="/articles/delete" method="POST" onsubmit="confirmDelete('Deseja mesmo deletar essa nota?',event, this)">
                                    <input name="id" type="hidden" value="<%= articles.id%>">
                                    <button class="button button-delete"><img class="icons" src="/img/icons/lixeira.png" alt=""></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
        <%})%>
    </div>

    <div class="d-flex justify-content-end">      
        <a href="/user/articles/page/1">PrÃ³ximo ></a>
    </div>
</div>





<%- include('../partials/footer.ejs')%>